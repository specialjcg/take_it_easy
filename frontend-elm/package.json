{
  "name": "take-it-easy-elm",
  "version": "1.0.0",
  "description": "Take It Easy - Frontend Elm avec MVU pur",
  "scripts": {
    "build:grpc": "esbuild src/grpc-client.ts --bundle --outfile=public/grpc-client.js --format=iife --platform=browser",
    "build:elm": "elm make src/Main.elm --optimize --output=public/elm.js",
    "build": "npm run build:grpc && npm run build:elm",
    "dev:elm": "elm make src/Main.elm --output=public/elm.js",
    "dev": "npm run build:grpc && npm run dev:elm && npm run serve",
    "serve": "python3 -m http.server 4000 -d public"
  },
  "dependencies": {
    "@protobuf-ts/grpcweb-transport": "^2.9.4",
    "@protobuf-ts/runtime": "^2.9.4",
    "@protobuf-ts/runtime-rpc": "^2.9.4"
  },
  "devDependencies": {
    "esbuild": "^0.20.0",
    "typescript": "^5.3.0"
  }
}
